case "${OS}" in
  "osx")
      local antigen_file=${BREWPATH}/share/antigen/antigen.zsh
      ;;
  "linux")
      local antigen_file=/usr/share/zsh-antigen/antigen.zsh
      ;;
esac

if [[ -r ${antigen_file} ]]; then
