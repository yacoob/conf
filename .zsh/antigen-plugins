  # ZSH_THEME_GIT_PROMPT_CONFLICTS="%{$fg[red]%}%{%G%}"
  # ZSH_THEME_GIT_PROMPT_CHANGED="%{$fg[blue]%}%{%G%}"
  # ZSH_THEME_GIT_PROMPT_BEHIND="%{%G%}"
