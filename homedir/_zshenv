source ~/.yacoob-conf

# Special arrangement for certain variables.
typeset -U path manpath

# locales
export LANG=en_IE.UTF-8
export LC_COLLATE=pl_PL.UTF-8
export LC_CTYPE=pl_PL.UTF-8
export LC_MESSAGES=C
export LC_MESSAGES=C
export TZ='Europe/Dublin'

# misc
export CVS_RSH=ssh
export EDITOR=vim
export EMAIL="yacoob@gmail.com"
export TMPDIR=/tmp
export VISUAL=vim

# grep settings
export GREP_OPTIONS="--color=auto"

# less settings
export LESS="-SXRM"
export LESSCHARSET="utf-8"

# python settings
export PYTHONSTARTUP="${HOME}/.pythonstartup"
export WORKON_HOME="${HOME}/.venvs"

# system/location dependent settings
case "${OS}" in
    "linux")
        path=(~/bin /usr/local/bin ${path})
        ;;
    "osx")
        case "${LOCATION}" in
            "office")
                export BREWPATH=/usr/brew
                ;;
            *)
                export BREWPATH=/usr/local
                ;;
        esac
        path=(~/.bin ${BREWPATH}/sbin ${BREWPATH}/share/python ${BREWPATH}/bin ${path})
        manpath=(${BREWPATH}/share/man ${manpath})
        ;;
esac

# Location dependent confidential settings
[[ -r ~/.zshenv.${LOCATION} ]] && source ~/.zshenv.${LOCATION}
