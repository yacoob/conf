# Keyboard: set fast and working key repeat.
NSGlobalDomain ApplePressAndHoldEnabled -bool false
NSGlobalDomain KeyRepeat -int 1
NSGlobalDomain InitialKeyRepeat -int 10
# Default state of save dialog.
NSGlobalDomain NSNavPanelExpandedStateForSaveMode -bool true
NSGlobalDomain NSNavPanelExpandedStateForSaveMode2 -bool true
# Dashboard dev mode.
com.apple.dashboard devmode YES
# Display full POSIX path as Finder window title
defaults write com.apple.finder _FXShowPosixPathInTitle -bool true
# Don't write .DS_Store files on net shares and USB volumes.
com.apple.desktopservices DSDontWriteNetworkStores -bool true
com.apple.desktopservices DSDontWriteUSBStores -bool true
# Disable the warning when changing a file extension
com.apple.finder FXEnableExtensionChangeWarning -bool false
# Make OS help window a normal window.
com.apple.helpviewer DevMode -bool true
# Screenshots
com.apple.screencapture location /Users/yacoob/Downloads
com.apple.screencapture type PNG
com.apple.screensaver askForPassword -int 1
# MacVim
org.vim.MacVim MMLastWindowClosedBehavior -int 2
org.vim.MacVim MMNativeFullScreen 0
